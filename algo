Une structure de contrôle => conditions

age EST UN ENTIER <- 16

 SI age > 18 ALORS
 			AFFICHER("Tu es majeur")
 FIN SI

SI age > 18 ALORS
	AFFICHER("Tu es majeur")
SINON
	AFFICHER("Tu es mineur")

// itération => boucle

tableau est un" CHAINE <- [
							produit : "pc",
							prix : "800",
							etat : "neuf",
							photo : "./photo"
								] clé et valeur

index <- 0

pour index <- 0
	TANT QUE index < 4
	SI (index <> photo)
			AFFICHER tableau[index]
		SINON
			AFFICHE photo
		FIN SI

			index <- index + 1

			fin tant que

//fonction
 de la matière brute => (argument) afficher 

type = Number
PROCEDURE addition(nb1, nb2)
		resultat EST UN ENTIER
DEBUT
		resultat <- nb1 + nb2
		RETURN resultat
FIN

addition(1, 2)

AFFICHER resultat <- 3